pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                echo 'Building automatically again '
                echo 'angry life'
            }
        }
 stage('Test') {
            steps {
                echo 'Testing automatically again'
                echo 'sad life'
            }
        }
 stage('Deploy') {
            steps {
                echo 'Deploying automatically'
                echo 'happy life'
            }
        }
    }
}
